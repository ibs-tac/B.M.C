<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//p[@id='fiscal_position_remark']" position="after">
            <table class="table table-borderless">
                <tbody>

                    <tr>


                        <td>
                            <strong>
                                Sales Executive:
                            </strong>

                            <br/>
                            <span t-field="doc.sales_executive"/>
                        </td>

                        <td>
                        </td>
                        <td>
                        </td>
                        <td>
                            <strong>
                                Sales Manager:
                            </strong>

                            <br/>
                            <span t-field="doc.sales_manager"/>
                        </td>

                    </tr>

                </tbody>
            </table>
        </xpath>
        <xpath expr="//th[@name='th_quantity']" position="replace">
            <th name="th_pregnancy" class="text-left">Pregnancy</th>
            <th name="th_weight" class="text-left">Color</th>
        </xpath>
        <xpath expr="//td[@name='td_quantity']" position="replace">
            <td name="pregnancy" class="text-left"><span t-field="line.pregnancy"/></td>
            <td name="weight" class="text-left"><span t-field="line.weight"/></td>
        </xpath>

<!--        <xpath expr="//td[@name='td_name']" position="replace">-->
<!--            <td name="td_name"><span t-esc="line.get_description()"/></td>-->
<!--        </xpath>-->
    </template>

</odoo>
