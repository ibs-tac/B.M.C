<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data noupdate="0">
        <!--
        Modify legacy access riles for res.partner
        Keep it here instead of manifest.py to ensure this is triggered on every update
        -->
        <function model="res.users" name="tweak_access_rules"/>
        <record id="contact_users" model="res.groups">
            <field name="name">Customer Restrict</field>
        </record>
        <record id="assign_users" model="res.groups">
            <field name="name">Assign Users</field>
        </record>

        <record id="rule_contact_users_followed_tags" model="ir.rule">
            <field name="name">Allowed Customers</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">
                ['&amp;', ('type', '!=', 'private'),'|','|','|',
                ('id', '=', user.partner_id.id),
                ('id', '=', user.company_id.partner_id.id),
                ('child_ids.id', 'in', user.user_restricted_ids.ids),
                ('id','in', [ p.id for p in user.user_restricted_ids]),]
            </field>
            <field name="groups" eval="[(4, ref('contact_users'))]"/>
        </record>

    </data>
</odoo>
